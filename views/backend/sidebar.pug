section.sidebar
  // Sidebar user panel
  .user-panel
    .pull-left.image
      img.img-circle(src='dist/img/user2-160x160.jpg', alt='User Image')
    .pull-left.info
      p=user.full_name
      a(href='#')
        i.fa.fa-circle.text-success
        |  Online
  // search form
  form.sidebar-form(action='#', method='get')
    .input-group
      input.form-control(type='text', name='q', placeholder='Search...')
      span.input-group-btn
        button#search-btn.btn.btn-flat(type='submit', name='search')
          i.fa.fa-search
  // /.search form
  // sidebar menu: : style can be found in sidebar.less
  ul.sidebar-menu(data-widget='tree')
    li.header
    li
      a(href='/analytics')
        i.fa.fa-pie-chart
        span Analytics
    //- li
    //-   a(href='/dashboard')
    //-     i.fa.fa-dashboard
    //-     span Dashboard
    li.treeview
      a(href='#')
        i.fa.fa-upload
        span Content Management
        span.pull-right-container
          i.fa.fa-angle-left.pull-right
      ul.treeview-menu
        li
          a(href='/content/courses')
            i.fa-fa-circle-o
            | Courses
        li
          a(href='/content/lessons')
            i.fa-fa-circle-o
            | Lessons
    li
      a(href='/infohub')
        i.fa.fa-info-circle
        span Information Hub
    li
      a(href='/ads')
        i.fa.fa-newspaper-o
        span Advertisements
    li
      a(href='/anouncements')
        i.fa.fa-bullhorn
        span Anouncements
